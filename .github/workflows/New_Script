name: Allure TestOps Demo (Working Solution)

on:
  workflow_dispatch:
    inputs:
      # Служебные параметры, обязательные для TestOps (required: false)
      ALLURE_JOB_RUN_ID:
        description: "TestOps service parameter for launch ID."
        required: false
      ALLURE_USERNAME:
        description: "TestOps service parameter for user identity."
        required: false

      Branch:
        description: "Branch or Tag to run on."
        required: true
        default: 'main'

env:
  ALLURE_TOKEN: ${{ secrets.ALLURE_TOKEN_FOR_SELFHOSTED }}
  ALLURE_ENDPOINT: https://testing.qatools.cloud
  ALLURE_PROJECT_ID: 1878
  ALLURE_RESULTS: build/allure-results
  
  
  ALLURE_JOB_RUN_ID: ${{ github.event.inputs.ALLURE_JOB_RUN_ID }}
  ALLURE_USERNAME: ${{ github.event.inputs.ALLURE_USERNAME }}
  ALLURE_LAUNCH_ID: ${{ github.event.inputs.ALLURE_LAUNCH_ID }} # ID запуска для фильтрации
  ALLURE_LAUNCH_NAME: ${{ github.event.inputs.ALLURE_LAUNCH_NAME }} # Имя запуска для фильтрации

jobs:
  run_allure_tests:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4
        with:
          ref: ${{ github.event.inputs.Branch }} 

      - name: Setup Python and Dependencies
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'
      - run: pip install -r requirements.txt

      - name: Setup AllureCTL
        uses: allure-framework/setup-allurectl@v1
        id: allurectl
        with:
          allure-endpoint: ${{ env.ALLURE_ENDPOINT }}
          allure-token: ${{ env.ALLURE_TOKEN }}
          allure-project-id: ${{ env.ALLURE_PROJECT_ID }}
          
      - name: Run Tests (using allurectl watch)
        id: run_tests
        run: |
          mkdir -p ${{ env.ALLURE_RESULTS }}
          
          allurectl watch -- pytest --alluredir=${{ env.ALLURE_RESULTS }} || true
        
        env:
          ALLURE_RESULTS: ${{ env.ALLURE_RESULTS }}
